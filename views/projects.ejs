<% layout('layouts/boilerplate') %>

  <section id="projects" class="projects-section reveal">
    <div class="section-inner">

      <!-- SAME AS SKILLS -->
      <div class="section-text">
        <h2 class="section-title">Projects</h2>
        <p class="section-subtitle">
          A selection of projects where I focused on clean architecture,
          scalability, and real-world impact.
        </p>
      </div>

      <!-- SAME CENTER WIDTH AS TERMINAL -->
      <div class="projects-content">

        <!-- TERMINAL -->
        <div class="terminal projects-terminal">
          <div class="terminal-header">
            <span class="dot red"></span>
            <span class="dot yellow"></span>
            <span class="dot green"></span>
            <span class="terminal-title">projects — bash</span>
          </div>

          <div class="terminal-body">
            <p class="terminal-line">
              <span class="user">nivi@macbook</span><span class="path">:~/projects</span>
              <span class="prompt">$</span>
              <span class="command">projects --list</span>
            </p>

            <p class="muted"># select a project to view details</p>

            <div class="projects-index">
              <button data-target="project-01">[01] MedTracker</button>
              <button data-target="project-02">[02] AI Product Review Analyzer</button>
            </div>
          </div>
        </div>

        <!-- PROJECT DETAILS (OUTSIDE TERMINAL) -->
        <div class="projects-grid">
          <!-- project cards here -->
          <article id="project-01" class="project-card clickable">
            <div class="project-header">
              <h3 class="project-title">
                <span class="project-index">[01]</span> MedTracker
              </h3>
              <span class="project-status">In development</span>
            </div>

            <p class="project-desc">
              A full-stack application that helps patients manage medical records,
              prescriptions, and reports in one place.
            </p>

            <p class="project-impact">
              Designed REST APIs, implemented role-based access,
              and built secure data flows for patient records.
            </p>

            <p class="project-tech">
              React · Node.js · MongoDB 
            </p>

