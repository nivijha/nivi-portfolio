          function closeSheet() {
            sheet.classList.remove("open");
            sheet.setAttribute("aria-hidden", "true");
            toggle.classList.remove("active");
            toggle.setAttribute("aria-expanded", "false");
            document.body.style.overflow = "";
            setTimeout(() => {
