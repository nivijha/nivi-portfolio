          <ul>
            <li>Node.js</li>
            <li>Express</li>
            <li>MongoDB</li>
            <li>MySQL</li>
          </ul>
        </div>

        <!-- Tools -->
        <div class="skills-col">
          <h3>Tools</h3>
          <ul>
            <li>Git</li>
            <li>GitHub</li>
            <li>Linux</li>
            <li>Docker</li>
            <li>AWS</li>
          </ul>
        </div>
      </div>

